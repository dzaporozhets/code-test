%table.table
  %tr
    %th Title
    %th Description
    %th Password
    %th

  - @passwords.each do |password|
    %tr
      %td
        = link_to [@application, password] do
          %strong
            = password.title
      %td
        %small.cgray
          = password.description
      %td= link_to '(hidden)', [@application, password]
      %td
        .pull-right
          = link_to 'Edit', edit_application_password_path(@application, password)
          &nbsp;
          = link_to 'Destroy', [@application, password], method: :delete, data: { confirm: 'Are you sure?' }

