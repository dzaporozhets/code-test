= content_for :title do
  %h2
    = link_to 'Apps', applications_path
    %i.icon-angle-right
    = link_to @application.title, @application
    %i.icon-angle-right
    = @password.title

%p.cgray
  = @password.description

.panel.panel-default
  .panel-heading
    %h5 Your password:
  .panel-body
    = hidden_field_tag :encrypted_password, @password.decrypted_password
    .alert.alert-danger.errors.unvisible
    .password
      = link_to 'Decrypt password', '#', class: 'decrypt-link btn btn-primary'


%br
= link_to 'Edit', edit_application_password_path(@application, @password), class: 'btn btn-default'

:coffeescript
  new PasswordShow()
